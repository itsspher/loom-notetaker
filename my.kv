<FileChoose>:
    title: "Open File"
    size_hint: .8, .8

    BoxLayout:
        orientation: "vertical"
        FileChooser:
            id: filechooser
            FileChooserListLayout

        Button:
            size_hint: (1, 0.1)
            text: "Load"
            on_release: root.load(filechooser.path, filechooser.selection)
            id: ldbtn


<SearchResult>:
    name: self.name
    directory: self.directory
    text: self.name
    size_hint: (1, None)
    size_y: 30

    text_size: self.width, None
    height: self.texture_size[1]
    padding: [10,10]

    on_press: self.click()


<MyGridLayout>:

    GridLayout:
        cols: 2
        rows: 1
        size: root.width, root.height

        GridLayout:

            size_hint_x: 0.27
            rows: 3
            
            TextInput:
                id: search_bar
                size_hint_y: None
                height: 30
                hint_text: "Search"
                multiline: False
                on_text_validate: root.search()
                margins: [3, 3, 3, 3]

            Label:
                text: "Results"
                size_hint_y: None
                height: 30

            ScrollView:
                do_scroll: (False, True)  
                bar_width: 10
                
                StackLayout:
                    id: search_matches
                    height: self.minimum_height
                    size_hint_x: 1
                    size_hint_y: None


        BoxLayout:
            
            cols: 2 
            orientation: "vertical"

            BoxLayout:
                size_hint: (1, 0.1)

                Button:
                    text: "New File"
                    size_hint: (.2, 1)
                    on_press: root.new()

                Button:
                    text: "Open File"
                    size_hint: (.2, 1)
                    on_press: root.open()

                Button:
                    text: "Save File"
                    size_hint: (.2, 1)
                    on_press: root.save()

                Button:
                    text: "Save As File"
                    size_hint: (.2, 1)
                    on_press: root.saveAs()

                Button:
                    text: "Link File (Exists)"
                    size_hint: (.2, 1)
                    on_press: root.link()

                Button:
                    text: "Link File (DNE)"
                    size_hint: (.2, 1)
                    on_press: root.link()

                Button:
                    text: "Delete File"
                    size_hint: (.2, 1)
                    on_press: root.delete()

                Button:
                    text: "Move Current File"
                    size_hint: (.2, 1)
                    on_press: root.moveFile()

                Button:
                    text: "Trigger Error"
                    size_hint: (.2, 1)
                    on_press: root.error_trigger()
            
            Label:
                id: file_open
                text:"No Open File"
                size_hint: (1, .04)

            TextInput:
                id: text_input
